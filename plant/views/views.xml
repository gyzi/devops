        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
      </field>
    </record>
    -->

    <!-- Top menu item -->
    
   <menuitem name="Plants Nursery" id="plant_menu_root"/>
    
    <!-- menu categories -->
    <menuitem name="Plants" id="nursery_plant_menu" parent="plant_menu_root" action="plant.action_window" sequence="1"/>
    
    <!-- actions -->
